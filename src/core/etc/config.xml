<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <streamx_connector_settings>
            <general_settings>
                <enable>0</enable>
                <batch_indexing_size>100</batch_indexing_size>
            </general_settings>
            <streamx_client>
                <ingestion_base_url>http://rest-ingestion:8080</ingestion_base_url>
                <event_source>magento-connector</event_source>
                <publishing_event_type>com.streamx.blueprints.data.published.v1</publishing_event_type>
                <unpublishing_event_type>com.streamx.blueprints.data.unpublished.v1</unpublishing_event_type>
                <connection_timeout>3</connection_timeout>
                <response_timeout>15</response_timeout>
                <disable_certificate_validation>0</disable_certificate_validation>
            </streamx_client>
            <rabbit_mq>
                <enable>0</enable>
                <host>rabbitmq</host>
                <port>5672</port>
                <user>magento</user>
                <password>magento</password>
            </rabbit_mq>
        </streamx_connector_settings>
    </default>
</config>
